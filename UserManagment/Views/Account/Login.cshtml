@model LoginViewModel
<div>
    <h1>Вход в личный кабинет</h1>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <table class="cellToChange">
                <div asp-validation-summary="All"></div>
                <tr>
                    <td>
                        <label asp-for="UserName"></label>
                    </td>
                    <td>
                        <input class="forInput" asp-for="UserName" />
                        <span asp-validation-for="UserName"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="Password"></label>
                    </td>
                    <td>
                        <input class="forInput" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </td>

                </tr>



            </table>
            <input class="button-large" type="submit" value="Войти" />
        </form>
    </div>
</div>